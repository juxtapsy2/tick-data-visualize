# Environment Configuration for Market Data Visualization
# Copy this file to .env and update with your actual values

# =============================================================================
# TimescaleDB Database Configuration
# =============================================================================
# When running TimescaleDB locally with docker-compose.timescaledb.yml:
DB_HOST=localhost
DB_PORT=5432
DB_USER=market_user
DB_PASSWORD=market_password
DB_NAME=trading_db

# When running application services in Docker and TimescaleDB locally:
# DB_HOST=host.docker.internal  # Use this on Mac/Windows
# DB_HOST=172.17.0.1             # Use this on Linux

# When running TimescaleDB in Docker with the same network:
# DB_HOST=timescaledb-host
# DB_PORT=5432

# When using external hosted TimescaleDB (Railway, Timescale Cloud, etc.):
# DB_HOST=your-instance.railway.app
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_secure_password
# DB_NAME=railway

# =============================================================================
# PostgreSQL Configuration (for TimescaleDB docker-compose)
# =============================================================================
POSTGRES_DB=trading_db
POSTGRES_USER=market_user
POSTGRES_PASSWORD=market_password
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Application Configuration
# =============================================================================
# Server
SERVER_HTTP_PORT=8080
SERVER_ENVIRONMENT=development

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TIME_FORMAT=rfc3339

# =============================================================================
# Market Data Configuration
# =============================================================================
VN30_TABLE_NAME=vn30_table
HNX_TABLE_NAME=hnx_table
CACHE_TTL=24h
STREAM_BUFFER_SIZE=100
MAX_CONCURRENT_CONNECTIONS=1000

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_WS_URL=ws://localhost:8080/ws
REACT_APP_API_URL=http://localhost:8080/api/v1
